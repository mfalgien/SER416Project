            <button type="button" class="btn btn-success float-right"> Log Out </button>
        </nav>
    </div>
    <div class="jumbotron jumbotron pb-2" id="jumbo">
        <div class="container justify-content-center">
            <h1 class="display-5">Hello Michael!</h1>
            <p class="lead">Current Enrollments</p>
        </div>
    </div>

    <div class="container-fluid col-8">
        <table class="table table-hover table-bordered">
            <thead class="thead-dark">
                <tr>
                    <th>Type</th>
                    <th>Description</th>
                    <th>Quantity</th>
                    <th>Price</th>
                </tr>
            </thead>
            <tbody class="table table-light table-bordered">
                <tr>
                    <th>
                        Class
                    </th>
                    <td>
                        Swimming
                    </td>
                    <td>
                        -
                    </td>
                    <td>
                        $5
                    </td>
                </tr>
                <tr>
                    <th>
                        Equipment Rental
                    </th>
                    <td>
                        Table
                    </td>
                    <td>
                        5
                    </td>
                    <td>
                        $25
                    </td>
                </tr>
                <tr>
                    <th>
                        Equipment Rental
                    </th>
                    <td>
                        Chair
                    </td>
                    <td>
                        25
                    </td>
                    <td>
                        $25
                    </td>
                </tr>
                <tr>
                    <th>
                        Rental Space
                    </th>
