        crossorigin="anonymous"></script>
    <link rel='stylesheet' href='/stylesheets/register.css' />

</head>

<body>
    <div class='container-fluid pt-2'>
        <nav class="navbar navbar-light">
            <div>
                <a class="btn btn-warning mr-2" href="/login" role="button">
                    Volunteer!
                </a>
               
            </div>
            <form class="form-inline">
                <input class="form-control mr-sm-2" type="search" placeholder="Search" aria-label="Search">
                <button class="btn btn-outline-success my-2 my-sm-0" type="submit">Search</button>
            </form>

            <a class="btn btn-success mr-2" href="/rentals" role="button">
                Rentals
            </a>
        </nav>
    </div>
    <div>
        <br>
        <br>
        <br>
        <br>
        <br>
        <br>
        <br>
        <br>
    </div>

    <div class="container col-6 d-flex align-items-center justify-content-center">
        <form class="align-items-center">
            <div class="form-group">
                <input type="text" class="form-control" id="exampleFormControlInput1" placeholder="Name">
            </div>
            <div class="form-group mt-3">
                <input type="email" class="form-control" id="exampleFormControlInput1" placeholder="Email">
            </div>

            <div class="form-group">
                <label for="payment">Payment Details</label>
                <input type="email" class="form-control" id="payment" placeholder="Credit Card Number">
            </div>
            <div class="form-row">


                <div class="row">
                    <div class="col">
                        <label for="details">Month</label>
                        <input type="text" class="form-control" id="details" placeholder="Month">
                    </div>
                    <div class="col">
                        <label for="year"> Year</label>
                        <input type="text" class="form-control" id="year" placeholder="Year">

                    </div>
                    <div class="col">
                        <label for="cvv">CVV</label>
                        <input type="text" class="form-control" id="cvv">

                    </div>
                </div>
            </div>

            <div class="form-check">
                <input class="form-check-input position-static mt-3" type="checkbox" id="check">
                <label class="form-check-label" for="check">
                    I want my donation to be anonymous
                </label>
            </div>
        </form>

    </div>
    <div class="container col-6 mt-3 d-flex align-items-center justify-content-center"">
            <a class=" btn btn-warning mr-2" href="/" role="button"> Donate
        </a>

